@using Microsoft.AspNetCore.Identity
@using Marcelena_web.Domain.Entitites
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://kit.fontawesome.com/813e2f98ee.js" crossorigin="anonymous"></script>
    <script src="~/js/popper.min.js"></script>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Support your locals</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top ">
        <div class="container d-flex align-items-center">
            <h1 class="logo"> <a asp-page="/Home">Support your locals</a></h1>
            <nav class="nav-menu navbar-collapse d-none d-lg-block">
                <ul>
                    <li>
                        <a asp-page="/Home">Home</a>
                    </li>
                    <li>
                        <a asp-page="/About">About</a>
                    </li>
                    <li>
                        <a asp-page="/Search/Index">Search</a>
                    </li>
                  
                    @if (SignInManager.IsSignedIn(User))
                    {
                      var user = await UserManager.GetUserAsync(User);  
                   if(user.Role != null){
                    if(user.Role == "Seller"){
                    <li>
                        <a asp-page="/AddPlace">Add place</a>
                    </li>
                    }
                    }
                        if(user.Role == "Admin"){
                    <li>
                        <a asp-page="/Admin/UserList">Admin Panel</a>
                    </li>
                    }
                <li class="drop-down nav-item ml-auto">
                    <div class="i">
                        <i class="fas fa-user"></i> 
                    </div>

                    <ul>
                        <li><a asp-area="Identity" asp-page="/Account/Profile">Account</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Favorites">Favorites</a></li>
                        <li>
                            <form id="logoutForm" class="logoutform" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Home", new { area = "" })">
                                <button id="logout" type="submit" class="log-out">Logout</button>
                            </form>
                        </li>
                    </ul>
                </li>
                    }
                    else
                    {
                        <li class="nav-item ml-auto lgn">
                            <a class="get-started-btn ml-auto" asp-area="Identity" asp-page="/Account/Login"> Log in</a>
                        </li>
                    }
                    </ul>
            </nav>
        </div>
    </header>
    <div class="container" style="min-height: 650px">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col col-md-6">
                        <div class="footer-info ">
                            <h3>Support your locals</h3>
                            <p>
                                Naugarduko g. 24  <br>
                                Vilnius<br><br>
                                <strong>Tel. </strong> +370 5 219 3050<br>
                                <strong>El. p.</strong>  mif@mif.vu.lt<br>
                            </p>
                        </div>
                    </div>
                    <div class="col col-md-6 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a asp-page="/Home">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-page="/About">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-page="/Search/Index">Search</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-page="/AddPlace">Add place</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Support your locals</span></strong>. All Rights Reserved
            </div>
        </div>
    </footer>
    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
