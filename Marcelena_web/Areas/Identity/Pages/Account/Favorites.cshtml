@page
@model Marcelena_web.Areas.Identity.Pages.Account.FavoritesModel
@{
    Layout = "~/Areas/Identity/Pages/_AccLayout.cshtml";
}
<html>
<head>
    <link href="~/assets/css/indexstyle.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container" >
            <div class="d-flex justify-content-between align-items-center">
                <h2>Favorites</h2>
                <ol>
                    <li><a>Account</a></li>
                    <li>Favorites</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <div class="s010">
        <form method="get">
            <div class="inner-form">
                <div class="basic-search">
                    <div class="input-field">
                        <input class="form-control" id="search" asp-for="Query" type="text" placeholder="Search" />
                        <div class="icon-wrap">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="s020" >
        <div class="inner-form">
            <div class="advance-search">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="table-names">
                                Shop name
                            </th>
                            <th class="table-names">
                                Shop address
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Favorites)
                        {
                            <tr>
                                <td class="table-body">
                                    <a href="~/Details/@item._id">@Html.DisplayFor(modelItem => item.ShopName)</a>
                                </td>
                                <td class="table-body">
                                    @{string address = @item.ShopAddress.ToString();}
                                    @address
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>