@page
@model Marcelena_web.Areas.Identity.Pages.Account.UserAddressModel
@{
    Layout = "~/Areas/Identity/Pages/_AccLayout.cshtml";
}
<html>
<head>
    <link href="/assets/css/loginstyle.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Add address</h2>
                <ol>
                    <li><a>Account</a></li>
                    <li>Add address</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <div class="body-login">
        <img class="wave" src="/assets/img/vawe.png">
        <div style="text-align:center">
            <div class="containe">
                <div class="register-content">
                    <form method="post">
                        <input class="form-control" type="hidden" asp-for="CurrentUser.Id">
                        <input class="form-control" type="hidden" asp-for="CurrentUser.UserName">
                        <input class="form-control" type="hidden" asp-for="CurrentUser.NormalizedEmail">
                        <input class="form-control" type="hidden" asp-for="CurrentUser.LockoutEnabled">
                        <input class="form-control" type="hidden" asp-for="CurrentUser.Email">
                        <input class="form-control" type="hidden" asp-for="CurrentUser.UserAddress">
                        <div class="input-div one">
                            <div class="i">
                                <i class="fas fa-map-pin"></i>
                            </div>
                            <div class="div">
                                <h5>Country</h5>
                                <input type="text" class="input" name="CurrentUser.UserAddress.CountryName" asp-for="CurrentUser.UserAddress.CountryName" id="inputCountry">
                                <span asp-validation-for="CurrentUser.UserAddress.CountryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-div one">
                            <div class="i">
                                <i class="fas fa-map-pin"></i>
                            </div>
                            <div class="div">
                                <h5>City name</h5>
                                <input type="text" class="input" name="CurrentUser.UserAddress.CityName" asp-for="CurrentUser.UserAddress.CityName" id="inputCity">
                                <span asp-validation-for="CurrentUser.UserAddress.CityName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-div one">
                            <div class="i">
                                <i class="fas fa-map-pin"></i>
                            </div>
                            <div class="div">
                                <h5>Street name</h5>
                                <input type="text" class="input" name="CurrentUser.UserAddress.StreetName" asp-for="CurrentUser.UserAddress.StreetName" id="inputStreetName" />
                                <span asp-validation-for="CurrentUser.UserAddress.StreetName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-div one">
                            <div class="i">
                                <i class="fas fa-map-pin"></i>
                            </div>
                            <div class="div">
                                <h5>Street nuumber</h5>
                                <input type="text" class="input" name="CurrentUser.UserAddress.StreetNumber" asp-for="CurrentUser.UserAddress.StreetNumber" id="inputStreetNumber">
                                <span asp-validation-for="CurrentUser.UserAddress.StreetNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-div one">
                            <div class="i">
                                <i class="fas fa-map-pin"></i>
                            </div>
                            <div class="div">
                                <h5>Apartment number</h5>
                                <input type="text" class="input" name="CurrentUser.UserAddress.ApartmentNumber" asp-for="CurrentUser.UserAddress.ApartmentNumber" id="inputApartmentNumber">
                                <span asp-validation-for="CurrentUser.UserAddress.ApartmentNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-login">Add address</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="/assets/js/loginmain.js"></script>
    </div>
</body>
</html>
